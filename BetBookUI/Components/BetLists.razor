
<div>
    <label style="margin-left: 5.25em;">@BetType Bets</label>
    @if(BasicBets.Count != 0)
    {
        if(BasicBets.Where(bb => bb.PayoutAmount != 0).ToList().Count == 0)
        {
            <div class="bet">
                <p style="margin: 1em 0;">NONE</p>
            </div>
        }
        @foreach(BasicBetModel basicBet in BasicBets)
        {
            
            if(basicBet.PayoutAmount != 0)
            {
                <div class="bet">
                    <ul>
                        <li>Chosen Winner || @basicBet.ChosenWinnerTeamName</li>
                        <li>Final Winner || @basicBet.FinalWinnerTeamName</li>
                        <li>Payout Amount || @Convert.ToDecimal(basicBet.PayoutAmount).ToString("#.00")</li>
                        <li>Point Spread || @basicBet.Spread</li>
                    </ul>
                </div>
            }
        }
    }
    else
    {
        <div class="bet">
            <p style="margin: 1em 0;">NONE</p>
        </div>
    }
</div>

@code {
   
    // List of basic bets to present
    [Parameter]
    public List<BasicBetModel> BasicBets { get; set; } = new();

    // Type of bets being presented
    [Parameter]
    public string BetType { get; set; } = "";
}