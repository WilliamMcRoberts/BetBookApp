
<div>
    <label style="margin-left: 3.5em;">@ParleyBetType Parley Bets</label>
    @if(ParleyBasicBetList.Count != 0)
    {
            int index = 1;
            @foreach(ParleyBasicBetModel parleyBasicBet in ParleyBasicBetList)
            {
                <div class="parley-bet">
                    <div class="parley-bet-label">
                        <label style="margin-left:4.25em;margin-top:1em;">Parley Bet #@index</label>
                        <label style="margin-right:5em;margin-top:1em;">Payout Amount $@Convert.ToDecimal(parleyBasicBet.BetPayout).ToString("#.00")</label>
                    </div>
                    @foreach(BasicBetModel basicBet in parleyBasicBet.BasicBets)
                    {
                        <div class="bet">
                            <ul>
                                <li>Chosen Winner || @basicBet.ChosenWinnerTeamName</li>
                                <li>Final Winner || @basicBet.FinalWinnerTeamName</li>
                                <li>Point Spread || @basicBet.Spread</li>
                            </ul>
                        </div>
                    }
                </div>
                index++;
            }
    }
    else
    {
        <div class="parley-bet">
            <div class="bet">
                <p style="margin: 1em 0;">NONE</p>
            </div>
        </div>
    }
</div>


@code {

    // Type of parley bet depending on bet status
    [Parameter]
    public string? ParleyBetType { get; set; }

    // List of basic bets to display
    [Parameter]
    public List<ParleyBasicBetModel> ParleyBasicBetList { get; set; } = new();
}
